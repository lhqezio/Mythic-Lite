# Mythic-Lite Environment Configuration
# Copy this file to .env and modify as needed

# Environment
ENVIRONMENT=development
DEBUG_MODE=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=rich
LOG_FILE=
LOG_CONSOLE=true

# LLM Configuration
LLM_MODEL_REPO=bartowski/Meta-Llama-3.1-8B-Instruct-GGUF
LLM_MODEL_FILENAME=Meta-Llama-3.1-8B-Instruct-Q4_K_M.gguf
LLM_MAX_TOKENS=150
LLM_TEMPERATURE=0.7
LLM_CONTEXT_WINDOW=512

# TTS Configuration
# Available voices: amy-low, amy-medium, amy-high, jenny-low, jenny-medium, jenny-high, karen-low, karen-medium, karen-high, chris-low, chris-medium, chris-high
# Note: Use just the voice name (e.g., "amy-low"), the full path will be constructed automatically
TTS_VOICE_PATH=amy-low
TTS_SAMPLE_RATE=22050
TTS_CHANNELS=1
TTS_AUDIO_FORMAT=paInt16
TTS_ENABLE_AUDIO=true

# ASR Configuration
ASR_MODEL_NAME=base
ASR_MODEL_SIZE=tiny
ASR_LANGUAGE=en
ASR_ENABLE=true
ASR_CHUNK_LENGTH=30.0
ASR_SAMPLE_RATE=16000
ASR_CHANNELS=1
ASR_AUDIO_FORMAT=paInt16

# Summarization Configuration
SUMMARIZATION_MODEL_REPO=bartowski/Meta-Llama-3.1-8B-Instruct-GGUF
SUMMARIZATION_MODEL_FILENAME=Meta-Llama-3.1-8B-Instruct-Q4_K_M.gguf
SUMMARIZATION_MAX_TOKENS=80
SUMMARIZATION_TEMPERATURE=0.0

# Conversation Configuration
CONVERSATION_MAX_LENGTH=12
CONVERSATION_MAX_TOKENS_PER_MESSAGE=200
CONVERSATION_MEMORY_THRESHOLD=8
CONVERSATION_AUTO_SUMMARIZE=4

# UI Configuration
UI_ENABLE_COLORS=true
UI_ENABLE_PROGRESS=true
UI_ENABLE_ANIMATIONS=true
UI_THEME=default
